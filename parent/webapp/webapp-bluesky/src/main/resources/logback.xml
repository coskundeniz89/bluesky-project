<configuration debug="true">
	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<!-- encoders are by default assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
		<withJansi>true</withJansi>
		<encoder>
			<pattern>%highlight(%date{yyyy-MM-dd HH:mm:ss} [%-5level] [%-80logger] - %msg %n)</pattern>
		</encoder>
	</appender>
	<appender name="luversof" class="ch.qos.logback.core.ConsoleAppender">
		<!-- encoders are by default assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
		<withJansi>true</withJansi>
		<encoder>
			<pattern>%boldMagenta(%date{yyyy-MM-dd HH:mm:ss} [%-5level] [%-80logger] - %msg %n)</pattern>
		</encoder>
	</appender>

	<logger name="net.luversof" level="debug" >
		<appender-ref ref="luversof" />
	</logger>
	<logger name="org.springframework" level="debug"/>

	<root level="warn">
		<appender-ref ref="console" />
	</root>
</configuration>