<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>net.luversof</groupId>
	<artifactId>bluesky-parent</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>
	<modules>
		<module>bluesky-app</module>
		<module>bluesky-web</module>
		<module>bluesky-core</module>
		<module>bluesky-opensource</module>
		<module>bluesky-test</module>
	</modules>

	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>1.3.1.RELEASE</version>
	</parent>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<java.version>1.8</java.version>
		<bluesky.version>0.0.1-SNAPSHOT</bluesky.version>
	</properties>

	<dependencies>
		<!-- (s) spring boot test -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-test</artifactId>
			<scope>test</scope>
		</dependency>
		<!-- (e) spring boot test -->

		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-configuration-processor</artifactId>
		</dependency>

		<dependency>
			<groupId>org.projectlombok</groupId>
			<artifactId>lombok</artifactId>
		</dependency>
	</dependencies>

	<dependencyManagement>
		<dependencies>

			<!-- (s) 2.0.8에서 AuthorizationCodeAccessTokenProvider mastateMandatory 
				설정 문제로 인해 이전 버전 처리 -->
			<dependency>
				<groupId>org.springframework.security.oauth</groupId>
				<artifactId>spring-security-oauth2</artifactId>
				<version>2.0.7.RELEASE</version>
			</dependency>
			<!-- (e) 2.0.8에서 AuthorizationCodeAccessTokenProvider mastateMandatory 
				설정 문제로 인해 이전 버전 처리 -->

			<dependency>
				<groupId>org.projectlombok</groupId>
				<artifactId>lombok</artifactId>
				<version>1.16.6</version>
			</dependency>

			<!-- (s) encryption -->
			<dependency>
				<groupId>org.bouncycastle</groupId>
				<artifactId>bcprov-jdk15on</artifactId>
				<version>1.53</version>
			</dependency>
			<dependency>
				<groupId>org.jasypt</groupId>
				<artifactId>jasypt-spring31</artifactId>
				<version>1.9.2</version>
			</dependency>
			<!-- (e) encryption -->

			<dependency>
				<groupId>net.luversof</groupId>
				<artifactId>bluesky-core</artifactId>
				<version>${bluesky.version}</version>
			</dependency>
			<dependency>
				<groupId>net.luversof</groupId>
				<artifactId>bluesky-app-api-battlenet</artifactId>
				<version>${bluesky.version}</version>
			</dependency>
			<dependency>
				<groupId>net.luversof</groupId>
				<artifactId>bluesky-app-blog</artifactId>
				<version>${bluesky.version}</version>
			</dependency>
			<dependency>
				<groupId>net.luversof</groupId>
				<artifactId>bluesky-app-bookkeeping</artifactId>
				<version>${bluesky.version}</version>
			</dependency>
			<dependency>
				<groupId>net.luversof</groupId>
				<artifactId>bluesky-opensource-jdbc</artifactId>
				<version>${bluesky.version}</version>
			</dependency>
			<dependency>
				<groupId>net.luversof</groupId>
				<artifactId>bluesky-opensource-security</artifactId>
				<version>${bluesky.version}</version>
			</dependency>
			<dependency>
				<groupId>net.luversof</groupId>
				<artifactId>bluesky-test</artifactId>
				<version>${bluesky.version}</version>
				<scope>test</scope>
			</dependency>

			<!-- (s) javascript libarary -->
			<dependency>
				<groupId>org.webjars</groupId>
				<artifactId>jquery</artifactId>
				<version>2.1.4</version>
			</dependency>
			<dependency>
				<groupId>org.webjars</groupId>
				<artifactId>jquery-ui</artifactId>
				<version>1.11.4</version>
			</dependency>
			<dependency>
				<groupId>org.webjars</groupId>
				<artifactId>jquery-mobile</artifactId>
				<version>1.4.5</version>
			</dependency>
			<dependency>
				<groupId>org.webjars</groupId>
				<artifactId>bootstrap</artifactId>
				<version>3.3.5</version>
			</dependency>
			<dependency>
				<groupId>org.webjars</groupId>
				<artifactId>bootswatch</artifactId>
				<version>3.3.5</version>
			</dependency>
			<dependency>
				<groupId>org.webjars</groupId>
				<artifactId>font-awesome</artifactId>
				<version>4.4.0</version>
			</dependency>
			<dependency>
				<groupId>org.webjars</groupId>
				<artifactId>handsontable</artifactId>
				<version>0.17.0</version>
			</dependency>
			<dependency>
				<groupId>org.webjars</groupId>
				<artifactId>tinymce-jquery</artifactId>
				<version>4.3.1</version>
			</dependency>
			<!-- (e) javascript libarary -->
		</dependencies>
	</dependencyManagement>

	<profiles>
		<profile>
			<id>localdev</id>
			<repositories>
				<repository>
					<id>bluesky-local-nexus</id>
					<url>http://192.168.99.100:8081/content/groups/public</url>
					<releases>
						<enabled>true</enabled>
					</releases>
					<snapshots>
						<enabled>true</enabled>
						<updatePolicy>always</updatePolicy>
					</snapshots>
				</repository>
			</repositories>
			<distributionManagement>
				<repository>
					<id>bluesky-releases</id>
					<url>http://192.168.99.100:8081/content/repositories/bluesky-releases</url>
				</repository>
				<snapshotRepository>
					<id>bluesky-snapshots</id>
					<url>http://192.168.99.100:8081/content/repositories/bluesky-snapshots</url>
				</snapshotRepository>
			</distributionManagement>
		</profile>
	</profiles>
</project>
